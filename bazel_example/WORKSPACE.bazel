  name = "com_google_googleapis",
  strip_prefix = "googleapis-cf41866c6f14f10a07aa1e2a1260fc0a2727d889",
  urls = ["https://github.com/googleapis/googleapis/archive/cf41866c6f14f10a07aa1e2a1260fc0a2727d889.zip"],
