<%- assert_locals gem -%>
inherit_gem:
  google-style: google-style.yml

AllCops:
  Exclude:
    - "<%= gem.name %>.gemspec"
    - "Rakefile"
    - "acceptance/**/*"
    - "test/**/*"

Bundler/OrderedGems:
  Enabled: false
Documentation:
  Enabled: false

Metrics/BlockLength:
  Exclude:
    - "samples/acceptance/*.rb"

Naming/FileName:
  Exclude:
    - "lib/<%= gem.name %>.rb"
